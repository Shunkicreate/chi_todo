{
    "name": "Go DevContainer",
    "dockerFile": "../docker-compose.yml",
    "appPort": [
        8080
    ],
    "customizations": {
        "extensions": [
            "golang.Go"
        ],
        "settings": {
            "go.gopath": "/go",
            "go.useLanguageServer": true,
            "terminal.integrated.shell.linux": "/bin/sh"
        }
    },
    "postCreateCommand": "go mod tidy"
}